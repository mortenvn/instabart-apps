<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mvn.instabart" version="1.4.1" android-versionCode="6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Instabart</name>
    <description>
        Appen som dekker alle dine behov som student... bortsett fra kaffe.
    </description>
    <author email="morten@noddeland.no" href="http://mvn.no">
        Morten Noddeland
    </author>
    <content src="index.html" />
    <access origin="*" />
    <platform name="android">
        <icon src="extra/android/icons/icon_ldpi.png" density="ldpi" />
        <icon src="extra/android/icons/icon_mdpi.png" density="mdpi" />
        <icon src="extra/android/icons/icon_hdpi.png" density="hdpi" />
        <icon src="extra/android/icons/icon_xhdpi.png" density="xhdpi" />
        <icon src="extra/android/icons/icon_xxhdpi.png" density="xxhdpi" />

        <splash src="extra/android/splashscreens/splash-land-hdpi.png" density="land-hdpi"/>
        <splash src="extra/android/splashscreens/splash-land-ldpi.png" density="land-ldpi"/>
        <splash src="extra/android/splashscreens/splash-land-mdpi.png" density="land-mdpi"/>
        <splash src="extra/android/splashscreens/splash-land-xhdpi.png" density="land-xhdpi"/>

        <splash src="extra/android/splashscreens/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="extra/android/splashscreens/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="extra/android/splashscreens/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="extra/android/splashscreens/splash-port-xhdpi.png" density="port-xhdpi"/>
    </platform>

    <platform name="ios">
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="extra/ios/icons/icon-60.png" width="60" height="60" />
        <icon src="extra/ios/icons/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="extra/ios/icons/icon-76.png" width="76" height="76" />
        <icon src="extra/ios/icons/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="extra/ios/icons/icon-40.png" width="40" height="40" />
        <icon src="extra/ios/icons/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="extra/ios/icons/icon.png" width="57" height="57" />
        <icon src="extra/ios/icons/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="extra/ios/icons/icon-72.png" width="72" height="72" />
        <icon src="extra/ios/icons/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="extra/ios/icons/icon-small.png" width="29" height="29" />
        <icon src="extra/ios/icons/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="extra/ios/icons/icon-50.png" width="50" height="50" />
        <icon src="extra/ios/icons/icon-50@2x.png" width="100" height="100" />

        <splash src="extra/ios/splashscreens/Default~iphone.png" width="320" height="480"/>
        <splash src="extra/ios/splashscreens/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="extra/ios/splashscreens/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="extra/ios/splashscreens/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="extra/ios/splashscreens/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="extra/ios/splashscreens/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="extra/ios/splashscreens/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="extra/ios/splashscreens/Default-667h.png" width="750" height="1334"/>
        <splash src="extra/ios/splashscreens/Default-736h.png" width="1242" height="2208"/>
        <splash src="extra/ios/splashscreens/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>

    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
</widget>
